# Configuración del Servidor
PORT=5000
NODE_ENV=development

# MongoDB Atlas Connection
MONGODB_URI=tu_uri_de_mongodb_atlas_aqui

# Configuración CORS (Frontend URL)
FRONTEND_URL=http://localhost:3000

# JWT Secret (para autenticación)
JWT_SECRET=tu_secreto_jwt_aqui

# Session Secret (para OAuth flow)
SESSION_SECRET=tu_secreto_de_sesion_aqui

# ========================================
# Google OAuth 2.0 Configuration
# ========================================
# Obtener credenciales en: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=tu_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=tu_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback

# Otras configuraciones
API_VERSION=v1
